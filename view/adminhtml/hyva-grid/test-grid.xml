<?xml version="1.0"?>
<grid xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:hyva:admin:etc/hyva-grid.xsd">
    <source>
        <repositoryListMethod>Magento\Catalog\Api\ProductRepositoryInterface::getList</repositoryListMethod>
    </source>
<!--    <source>-->
<!--        <arrayProvider>Hyva\AdminTest\Model\CustomerGridDataProvider</arrayProvider>-->
<!--        <arrayProvider>Hyva\AdminTest\Model\ScalarGridDataProvider</arrayProvider>-->
<!--    </source>-->
    <massActions idColumn="name" idsParam="ids">
        <action id="update" label="Update" url="*/massActions/update"/>
        <action id="delete" label="Delete All" url="*/massActions/delete" requireConfirmation="true"/>
    </massActions>
    <actions idColumn="name">
        <action id="edit" label="Edit" url="*/*/edit" idParam="id"/>
        <action id="delete" label="Delete" url="*/*/delete"/>
        <action id="index" label="Reindex" url="admin/dashboard"/>
    </actions>
    <columns rowAction="edit">
        <include keepAllSourceColumns="true">
            <column name="name" rendererBlockName="block-name-in-layout-xml"/>
            <column name="family" template="Hyva_AdminTest::family-col.phtml"/>
        </include>
        <exclude>
            <column name="weight"/>
        </exclude>
    </columns>
    <entityConfig>
        <label>
            <singular>Fossa</singular>
            <plural>Fossazas</plural>
        </label>
    </entityConfig>
</grid>
