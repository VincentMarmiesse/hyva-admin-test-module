<?xml version="1.0"?>
<grid xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Hyva_Admin:etc/hyva-grid.xsd">
    <source>
        <repositoryListMethod>\Magento\Catalog\Api\ProductRepositoryInterface::getList</repositoryListMethod>
    </source>
    <massActions idColumn="id" idsParam="ids">
        <action id="update" label="Update" url="*/massActions/update"/>
        <action id="delete" label="Delete All" url="*/massActions/delete" requireConfirmation="true"/>
    </massActions>
    <actions idColumn="id">
        <action id="edit" label="Edit" url="*/*/edit" idParam="id"/>
        <action id="delete" label="Delete" url="*/*/delete"/>
        <action id="index" label="Reindex" url="admin/dashboard"/>
    </actions>
    <columns>
        <include keepAllSourceColumns="true">
            <column name="id"/>
            <column name="sku"/>
            <column name="media_gallery" renderAsUnsecureHtml="true"/>
            <column name="media_gallery_entries" renderAsUnsecureHtml="true"/>
        </include>
        <exclude>
            <column name="weight"/>
        </exclude>
    </columns>
    <navigation>
        <pager>
            <defaultPageSize>1</defaultPageSize>
            <pageSizes>10,30,50</pageSizes>
        </pager>
    </navigation>
    <entityConfig>
        <label>
            <singular>Product</singular>
            <plural>Products</plural>
        </label>
    </entityConfig>
</grid>
